{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "functions": {
        "api/[...].ts": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "routes": [
        {
            "src": "^/api/(.*)",
            "dest": "/api/[...]"
        },
        {
            "src": "^/attached_assets/(.*)$",
            "dest": "/attached_assets/$1"
        },
        {
            "src": "^/assets/(.*)$",
            "dest": "/assets/$1"
        },
        {
            "src": "^/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|webp|avif|woff|woff2|ttf|map))$",
            "dest": "/$1"
        },
        {
            "src": "^/(.*)$",
            "dest": "/index.html"
        }
    ]
}